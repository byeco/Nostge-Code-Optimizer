{
  "manifest_version": 3,
  "name": "Nostge Helper",
  "version": "1.2",
  "description": "Nostge Helper optimizes your code for you, helps with extra codes, and provides support in design.",
  "permissions": ["contextMenus", "activeTab"],
  "background": {
    "service_worker": "JS/background.js"
  },
  "icons": {
    "48": "İCON/icon.png"
  },
  "action": {
    "default_icon": "İCON/icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["JS/content.js"]
    }
  ]
}
