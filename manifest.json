{
    "manifest_version": 2,
    "name": "Nostge Helper",
    "version": "1.2",
    "description": "Nostge Helper optimizes your code for you, helps with extra codes, and provides support in design.",
    "permissions": ["contextMenus", "activeTab"],
    "background": {
      "scripts": ["JS/background.js"],
      "persistent": false
    },
    "icons": {
      "48": "İCON/icon.png"
    },
    "browser_action": {
      "default_icon": "İCON/icon.png",
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["JS/content.js"]
      }
    ]
  }
  